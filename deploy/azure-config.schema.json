{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Azure Deployment Configuration",
  "description": "Configuration for deploying Checklist POC to Azure",
  "type": "object",
  "properties": {
    "resourceGroup": {
      "type": "string",
      "description": "Azure resource group name"
    },
    "location": {
      "type": "string",
      "description": "Azure region (e.g., eastus, westus2)",
      "enum": ["eastus", "eastus2", "westus", "westus2", "westus3", "centralus", "northcentralus", "southcentralus"]
    },
    "appName": {
      "type": "string",
      "description": "Web app name (must be globally unique)",
      "pattern": "^[a-z0-9-]+$"
    },
    "sqlServer": {
      "type": "string",
      "description": "Existing SQL Server name (without .database.windows.net)"
    },
    "sqlDatabase": {
      "type": "string",
      "description": "Database name to create"
    },
    "sqlAdminUser": {
      "type": "string",
      "description": "SQL Server admin username"
    },
    "appServiceOS": {
      "type": "string",
      "enum": ["Linux", "Windows"],
      "description": "App Service operating system"
    },
    "enableApplicationInsights": {
      "type": "boolean",
      "description": "Enable Application Insights monitoring"
    }
  },
  "required": ["resourceGroup", "location", "appName", "sqlServer", "sqlDatabase", "sqlAdminUser", "appServiceOS"]
}
